<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="429dp"
        android:layout_height="573dp"
        android:gravity="center_vertical|center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="217dp"
            android:layout_height="447dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:onClick="moreBeer"
                android:text="+"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="65sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="103dp"
                android:layout_height="111dp"
                android:src="@drawable/beer" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:onClick="lessBeer"
                android:text="-"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="65sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cuentaBirras"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="25dp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="65sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="211dp"
            android:layout_height="439dp"
            android:gravity="center_vertical|center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:onClick="moreChicken"
                android:text="+"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="65sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="107dp"
                android:layout_height="114dp"
                android:src="@drawable/chicken" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:onClick="lessChicken"
                android:text="-"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="65sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cuentaPollos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="25dp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="65sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/botonSeguir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:onClick="executeOrder"
            android:text="@string/botonSeguir" />
    </LinearLayout>

</LinearLayout>